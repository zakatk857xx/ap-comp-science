public class Greeter
{
     private String name;

     public Greeter()
     {
          name = new String("<no_name>");
     }
     
     public Greeter(String n)
     {
          name = new String(n);
     }
          
     public String sayHello()
     {
          return "Hello, " + name + ".";
     }
          
     public String sayGoodbye()
     {
          return "Goodbye, " + name + ".";
     }
          
     public String refuseHelp()
     {
          return "I am sorry, " + name +". I am afraid I cannot do that.";
     }
}
